<!DOCTYPE html>
<html>
<head>
  <title>Inrealsound</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <header>
    <ul class= "right">
      <% if current_user %>
          <li><em><%= link_to "Welcome #{current_user.email}", '/profile'%></em></li>
          <li> below is delete session </li>
          <li>  <%= link_to 'Signout', destroy_user_session_path, :method => :delete%> </li>
      <% else %>
        <li>  <%= link_to "Sign up", new_user_registration_path, class: "sign_up" %> </li>
        <li>  <%= link_to "Login", new_user_session_path, class: "login" %> </li>
      <% end %>
    </ul>
  </header>


<%= yield %>

</body>
</html>
